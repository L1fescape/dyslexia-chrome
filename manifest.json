{
   "background": {
      "persistent": true,
      "scripts": [
        "javascripts/background.js"
      ]
   },
   "browser_action": {
      "default_icon": "icon16.png",
      "default_title": "Dyslexia"
   },
   "description": "Jumble text to simulate reading with dyslexia",
   "icons": {
      "128": "icon128.png",
      "16": "icon16.png",
      "48": "icon48.png"
   },
   "incognito": "split",
   "manifest_version": 2,
   "minimum_chrome_version": "25",
   "name": "Dyslexia",
   "offline_enabled": true,
   "permissions": [ "activeTab" ],
   "version": "0.0.1"
}
